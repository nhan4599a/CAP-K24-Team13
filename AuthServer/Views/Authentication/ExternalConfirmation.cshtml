@using AuthServer.ViewModels
@model ExternalSignInCreateAccountViewModel
<form method="POST" action="/auth/ExternalConfirmation">
    @Html.AntiForgeryToken()
    <p>Input your account informantion</p>
    <input type="hidden" value="@Model!.ReturnUrl" name="ReturnUrl" />
    <input type="hidden" value="@Model!.Provider" name="Provider" />
    <input type="hidden" value="@Model!.ProviderId" name="ProviderId" />
    <input type="hidden" value="a" name="SessionId" />
    <input type="hidden" value="b" name="IdToken" />
    <div class="row mb-4">
        <div class="form-outline">
            <input type="email" id="input-email"
                   class="form-control" placeholder="Email" name="Email"
                   @(Model!.Email != null ? "readonly" : "") value="@(Model!.Email != null ? Model.Email : "")" />
            <label class="form-label" for="input-email">Email</label>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col form-outline me-2">
            <input type="text" id="input-firstname" class="form-control" placeholder="First name" name="FirstName" />
            <label class="form-label" for="input-firstname">Firstname</label>
        </div>
        <div class="col form-outline">
            <input type="text" id="input-lastname" class="form-control" placeholder="Last name" name="LastName" />
            <label class="form-label" for="input-lastname">Lastname</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="text" id="input-username" class="form-control" placeholder="Username" name="Username" />
            <label class="form-label" for="input-username">Username</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="password" id="input-password" class="form-control" placeholder="Password" name="Password" />
            <label class="form-label" for="input-password">Password</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="password" id="input-re-password" class="form-control" placeholder="Re Password" name="RePassword" />
            <label class="form-label" for="input-re-password">Re-Password</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <i class="far fa-calendar-alt trailing pe-auto" style="cursor: pointer" onclick="openDatePicker()"></i>
            <input type="text" id="input-dob" class="form-control form-icon-trailing" placeholder="Day of birth" name="DoB" />
            <label class="form-label" for="input-dob">Day of birth</label>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign In</button>
    </div>
    <div class="row">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
</form>