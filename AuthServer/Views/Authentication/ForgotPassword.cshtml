<form method="POST"> 
    @Html.AntiForgeryToken()
    <p style="font-family: Lora;">Forgot Password</p>
    <div class="form-outline mb-4">
        <input type="email" id="input-email" class="form-control" placeholder="Email" name="Email" />
        <label class="form-label" for="input-email" style="font-family: Lora;">Input Email to get link</label>
    </div>
    <div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
    <div class="d-flex align-items-center justify-content-center pb-4">
        <button class="btn-hover btn btn-outline-danger" type="submit">Next</button>
    </div>
</form>
