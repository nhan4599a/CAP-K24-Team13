<form method="POST" autocomplete="off">
    <input autocomplete="false" name="hidden" type="text" style="display: none" />
    @Html.AntiForgeryToken()
    <p style="font-family: Lora;">Input your account information</p>
    <div class="row mb-4">
        <div class="form-outline">
            <input type="email" id="input-email" class="form-control" placeholder="Email" name="Email" autocomplete="off" />
            <label class="form-label" for="input-email" style="font-family: Lora;">Email</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="text" id="input-username" class="form-control" placeholder="Username" name="Username" />
            <label class="form-label" for="input-username" style="font-family: Lora;">Username</label>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col form-outline me-2">
            <input type="text" id="input-firstname" class="form-control" placeholder="First name" name="FirstName" autocomplete="off" />
            <label class="form-label" for="input-firstname" style="font-family: Lora;">Firstname</label>
        </div>
        <div class="col form-outline">
            <input type="text" id="input-lastname" class="form-control" placeholder="Last name" name="LastName" autocomplete="off" />
            <label class="form-label" for="input-lastname" style="font-family: Lora;">Lastname</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="text" id="input-username" class="form-control" placeholder="Username" name="Username" autocomplete="off" />
            <label class="form-label" for="input-username" style="font-family: Lora;">Username</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="tel" id="input-tel" class="form-control" placeholder="Phone nnumber" name="PhoneNumber" autocomplete="off" />
            <label class="form-label" for="input-tel" style="font-family: Lora;">Phone number</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="password" id="input-password" class="form-control" placeholder="Password" name="Password" autocomplete="off" />
            <label class="form-label" for="input-password" style="font-family: Lora;">Password</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <input type="password" id="input-re-password" class="form-control" placeholder="Re Password" name="RePassword" autocomplete="off" />
            <label class="form-label" for="input-re-password" style="font-family: Lora;">Re-Password</label>
        </div>
    </div>
    <div class="row">
        <div class="form-outline mb-4">
            <i class="far fa-calendar-alt trailing pe-auto" style="cursor: pointer" onclick="openDatePicker()"></i>
            <input type="text" id="input-dob" class="form-control form-icon-trailing" placeholder="Day of birth" name="DoB" autocomplete="off" />
            <label class="form-label" for="input-dob" style="font-family: Lora;">Day of birth</label>
        </div>
    </div>
    <div class="row">
        <button class="btn-hover btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">Sign Up</button>
    </div>
    <div class="row">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    </div>
    <div class="row">
        <div class="d-flex align-items-center justify-content-center pb-4">
            <p class="mb-0 me-2">Already have an account?</p>
            <a class="btn-hover btn btn-outline-danger" href="/auth/signin">Sign In</a>
        </div>
    </div>
</form>