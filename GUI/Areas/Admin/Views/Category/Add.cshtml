<h4 class="font-weight-bolder text-center">Add Categories</h4>
<form id="form-modal" role="form">
    <div class="row justify-content-center">
        <div class="col-5 ">

            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="input-name">
            </div>
            @await Component.InvokeAsync("CategorySpecialDropdown")
            <div class="text-left">
                <a href="#" class="btn btn-primary" id="btn-submit">Add</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">

        $(function () {
            let classNames = ['active', 'bg-gradient-primary'];
            $('#nav-item-category').addClass(classNames);
            $('#btn-submit').click(function (e) {
                e.preventDefault();

                var name = $('#input-name').val();
                var special = $('#input-special').val();

                var requestModel = { categoryName: name, special: special };

                $.ajax({
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(requestModel),
                    url: "https://localhost:44302/api/categories",
                    success: function () {
                        window.location.href = "/admin/category";
                    },
                    error: function () {
                        alert("Something when wrong");
                    }
                });
            });
        });

    </script>
}