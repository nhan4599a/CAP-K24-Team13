    <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script>
    <script>
        Dropzone.autoDiscover = false;
        $(document).ready(function () {
            tinymce.init({
                selector: '#input-description',
                height: '210px'
            });
            const acceptedMimeTypes = ['image/jpeg', 'image/jpg', 'image/png'];
            const acceptedMaxBytes = 4 * 1024 * 1024;
            let remainingBytes = acceptedMaxBytes;
            let dropzone = new Dropzone('div#file-section', {
                maxFilesize: 1,
                paramName: 'files',
                maxFiles: 5,
                filesizeBase: 1024,
                autoProcessQueue: false,
                uploadMultiple: true,
                acceptedFiles: acceptedMimeTypes.join(','),
                addRemoveLinks: true,
                myFiles: []
            });
            let edittingShopInterface = JSON.parse(localStorage.getItem('shop-interface.editting'));
            if (edittingShopInterface)
                loadEdittingShopInterface(edittingShopInterface, dropzone);
            dropzone.on('addedfile', function (file) {
                this.options.myFiles.push(file);
                let maxFileNumber = this.options.maxFiles;
                let maxFileSize = this.options.maxFilesize;
                let uploadedFileSizeInMb = file.size / (1024 * 1024);
                if (this.files.length > this.options.maxFiles) {
                    this.removeFile(file);
                    toastr.error('Max file number exceeded!', 'File is rejected');
                } else if (!acceptedMimeTypes.includes(file.type)) {
                    this.removeFile(file);
                    toastr.error('You can\'t upload this type of file!', 'File is rejected');
                } else if (uploadedFileSizeInMb > maxFileSize) {
                    this.removeFile(file);
                    toastr.error(`${uploadedFileSizeInMb.toFixed(2)} MB file is too big to upload!`, 'File is rejected');
                } else if (file.size > remainingBytes) {
                    this.removeFile(file);z
                    toastr.error('Maximum file size exceeded!', 'File is rejected');
                } else {
                    remainingBytes -= file.size;
                    let fileReader = new FileReader();
                    let index = this.files.length - 1;
                    fileReader.onload = function (e) {
                        let dataURL = e.target.result;
                        $('#image-carousel').carousel('pause');
                        $('#image-carousel').children('.carousel-inner').children('.carousel-item').eq(index)
                            .children('img').attr('src', dataURL);
                        $('#image-carousel').carousel({
                            ride: true,
                            interval: 3500
                        }).carousel(index);
                    };
                    fileReader.readAsDataURL(file);
                }
            });
            dropzone.on('removedfile', function (file) {
                let removedIndex = this.options.myFiles.findIndex(item => item.upload.uuid == file.upload.uuid);

                let lastAddedIndex = this.options.myFiles.length - 1;

                let carouselItems = $('#image-carousel').children('.carousel-inner').children('.carousel-item');
                $('#image-carousel').carousel('pause');
                for (let i = removedIndex; i < lastAddedIndex; i++) {
                    carouselItems.eq(i).children('img')
                        .attr('src', carouselItems.eq(i + 1).children('img').attr('src'));
                }
                carouselItems.eq(lastAddedIndex).children('img').attr('src', '/assets/admin/img/image-holder.jpg');
                $('#image-carousel').carousel({
                    ride: true,
                    interval: 3500
                }).carousel(removedIndex);
                this.options.myFiles.splice(removedIndex, 1);
            });
            $('a.btn[name=btn-clear]').click(function () {
                displayYesNoQuestion('Are you sure?', () => {
                    $('#input-name').val('');
                    $('#input-phone').val('');
                    $('#input-email').val('');
                    $('#input-address').val('');

                    $('#input-name').parent().removeClass('is-filled');
                    $('#input-phone').parent().removeClass('is-filled');
                    $('#input-email').parent().removeClass('is-filled');
                    $('#input-address').parent().removeClass('is-filled');

                    dropzone.files.forEach(function (file) {
                        dropzone.removeFile(file);
                    });
                });
            });

            $('a.btn[name=btn-save]').click(function () {
                let editMode = localStorage.getItem('shop-interface.edit-mode');
                
                let animationLoader = new AnimationLoader('#loading-container', '/assets/admin/img/illustrations/loading.json');
                animationLoader.showAnimation();
                let successCallback = () => {
                    localStorage.removeItem('shop-interface.edit-mode');
                    localStorage.removeItem('shop-interface.editting');
                    animationLoader.hideAnimation();
                    setTimeout(() => window.location = '/admin/interface', 500);
                };
                let errorCallback = () => {
                    animationLoader.hideAnimation();
                    toastr.error('Failed to edit interface!', 'Error');
                };

                if (dropzone.files.length < 1) {
                    toastr.error('You must upload at least 1 pictures!', 'Error');
                    return;
                }

                let formData = new FormData();
                let requestModelObject = buildRequestModel();
                Object.keys(requestModelObject).forEach(key => {
                    formData.append(`requestModel.${key}`, requestModelObject[key]);
                });
                for (let i = 0; i < dropzone.files.length; i++)
                    formData.append(`images[${i}]`, dropzone.files[i]);
                if (editMode === 'add') {
                    addShopInterface(0, formData).then(successCallback).catch(errorCallback);
                } else {
                    for (let i = 0; i < edittingShopInterface.images.length; i++)
                        formData.append(`requestModel.shopImages[${i}]`, edittingShopInterface.images[i]);
                    editShopInterface(0, formData).then(successCallback).catch(errorCallback);
                }
            });
        });

        function buildRequestModel() {
            let name = $('#input-name').val();
            let phone = $('#input-phone').val();
            let email = $('#input-email').val();
            let address = $('#input-address').val();
            let description = tinymce.activeEditor.getContent({ format: 'text' });

            return {
                name: name,
                shopPhoneNumber: phone,
                shopEmail: email,
                shopAddress: address,
                shopDescription: description
            }
        }

        function loadEdittingShopInterface(shopInterface, dropzone) {
            $('#input-name').val(shopInterface.shopName);
            $('#input-phone').val(shopInterface.shopPhoneNumber);
            $('#input-email').val(shopInterface.shopEmail);
            $('#input-address').val(shopInterface.shopAddress);
            $('#input-description').val(shopInterface.shopDescription);
            shopInterface.images.forEach(imageUrl => getShopInterfaceImage(imageUrl).then(blob => {
                let file = new File([blob], blob.name, { type: blob.type });
                dropzone.addFile(file);
            }));
            $('#input-name').parent().addClass('is-filled');
            $('#input-phone').parent().addClass('is-filled');
            $('#input-email').parent().addClass('is-filled');
            $('#input-address').parent().addClass('is-filled');
        }
    </script>
