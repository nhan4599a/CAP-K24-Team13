@model IEnumerable<GUI.Areas.Customer.Models.ShopViewModel>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<section class="section section-collection">
    @if (Model != null)
    {
        <div class="wrapper-collection-1">
            <div class="container-fluid">
                <div class="row">
                    <div class="clearfix content-product-list">
                        @foreach (var item in Model)
                        {

                            <div class="col-md-4 col-sm-6 col-xs-6 pro-loop ">
                                <div class="product-block product-resize fixheight" style="height: 361px;">
                                    <div class="product-img ">
                                        <div class="product-sale">
                                        </div>
                                        <a href="https://delight-shop.myharavan.com/products/may-anh-panasonic-x-t100" title="Máy ảnh Panasonic X-T100" class="image-resize ratiobox lazyloaded" style="height: 277px;" data-expand="-1">
                                            <img class="img-loop img-hover ls-is-cached lazyloaded" data-src="//product.hstatic.net/1000306140/product/sf_grande.jpg" src="//product.hstatic.net/1000306140/product/sf_grande.jpg" alt=@item.ShopName>

                                        </a>
                                        <div class="button-add">
                                            <button title="Detail" class="action" onclick="#">
                                                Xem cửa hàng<i class="fa fa-long-arrow-right"></i>
                                            </button>
                                        </div>
                                        <div class="pro-price-mb">
                                            <span class="pro-price">12,300,000₫</span>
                                            <span class="pro-price-del">
                                                <del class="compare-price">12,999,000₫</del>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="product-detail clearfix">
                                        <div class="box-pro-detail">
                                            <h3 class="pro-name">
                                                <a href="https://delight-shop.myharavan.com/products/may-anh-panasonic-x-t100" title="Máy ảnh Panasonic X-T100">
                                                    @item.ShopName
                                                </a>

                                            </h3>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="wrapper-heading-home animation-tran text-center">
            <div class="container-fluid">
                <div class="site-animation">
                    <h2>
                        Không tìm thấy cửa hàng hoặc sản phẩm
                    </h2>
                </div>
            </div>
        </div>
    }

</section>
