                                        <!-- End .banner-title -->
                                        <a href="#" class="banner-link">
                                            Shop Now <i class="icon-long-arrow-right"></i>
                                        </a>
                                    </div>
                                    <!-- End .banner-content -->
                                </div>
                                <!-- End .banner banner-overlay -->
                            </div>
                            <!-- End .widget widget-banner -->
                        </div>
                    </div>
                    <!-- End .row -->
                </div>
                <!-- End .sidebar sidebar-home -->
            </aside>
            <!-- End .col-lg-3 col-xxl-2 -->
        </div>
        <!-- End .row -->
    </div>
    <!-- End .container-fluid -->
</main>