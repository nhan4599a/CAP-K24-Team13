@model DatabaseAccessor.Model.ShopCategory
@{ 
    ViewData["Title"] = "ABC";
}
@*---------------------------------------------------------------------------*@
@*anh Gấu muốn test giao diện add thì thêm trên cái localhost /category/add
    còn cái giao diện đẻ load category ra là /category/index*@
@*---------------------------------------------------------------------------*@

<h4 class="font-weight-bolder text-center">Add Categories</h4>
<form id="form-modal" role="form">
    <div class="input-group input-group-outline mb-3">
        <label class="form-label" rows="5">Name</label>
        <input type="text" class="form-control" id="input-name">
    </div>
    <div class="input-group input-group-outline mb-3">
        <select id="input-special">
            <option value="0" selected>------------Select special---------</option>
            <option value="1">Quần áo</option>
            <option value="2">Thiết bị điện tử</option>
        </select>
    </div>
    <div class="text-left">
        <a class="btn btn-primary" id="btnSubmit">Add</a>
    </div>

</form>

@section Scripts {
    <script type="text/javascript">

        $(function () {
            $('#btnSubmit').click(function () {
                var name = $('#input-name').val();
                var special = $('#input-special').val();
                var category = { categoryName: name, special: special };
                $.ajax({
                    type: 'POST',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(category),
                    url: "https://localhost:44302/api/categories",
                    success: function (data) {
                        console.log(data);
                    },
                    error: function (result) {
                        alert("Something when wrong");
                    }
                });
            });
        });
    </script>
}