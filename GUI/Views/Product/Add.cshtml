<h4 class="font-weight-bolder text-center">Add Product</h4>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-growl/1.0.0/jquery.bootstrap-growl.min.js"></script>
<form role="form">

    <div class="row justify-content-center">
        <div class="col-5 ">
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="input-group input-group-outline mb-3">
                <select class="form-select" aria-label="Default select example" id="categoryId">
                    <option selected="selected">Select category</option>
                </select>
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Description</label>
                <input type="text" class="form-control" id="description">
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Quantity</label>
                <input type="number" class="form-control" id="quantity">
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Price</label>
                <input type="number" class="form-control" id="price">
            </div>
            <div class="input-group input-group-outline mb-3">
                <label class="form-label">Discount</label>
                <input type="text" class="form-control" id="discount">
            </div>
            <div class="text-left">
                <a class="btn btn-primary" id="btnSubmit">Add</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            
            $('#btnSubmit').click(function (e) {
                e.preventDefault();
                //get
                var name = $("#name").val();
                var description = $("#description").val();
                var quantity = $("#quantity").val();
                var price = $("#price").val();
                var discount = $("#discount").val();


                $.ajax({
                    type: 'POST',
                    data: {
                        product: {
                            name: name,
                            description: description,
                            quantity: quantity,
                            price: price,
                            discount: discount
                        }
                    },
                    url: "https://localhost:44302/api/products",
                    success: function (data) {
                        alert("product name" + data);
                    },
                    error: function (result) {
                        alert("Something when wrong");
                    }
                });
            });

            $.get('https://localhost:44302/api/categories', null, (resp) => {
                var categories = resp.data;
                var optionsHtml = '';
                categories.forEach(category => {
                    optionsHtml += `<option value="${category.id}">${category.categoryName}</option>`;
                });
                if (optionsHtml != '') {
                    $('option[selected=selected]').after(optionsHtml);
                }
            });
        });

    </script>
}